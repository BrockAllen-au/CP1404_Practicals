BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            font_size: 48
            multiline: False
            on_text: app.convert_m_to_km(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                id: increment_count
                text: 'Up'
                font_size: 20
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                id: decrease_count
                text: 'Down'
                font_size: 20
                on_press: app.handle_increment(input_number.text, -1)
